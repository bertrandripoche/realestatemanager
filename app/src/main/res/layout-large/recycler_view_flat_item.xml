<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_flat_relative_layout"
    android:orientation="vertical"
    android:layout_width="200dp"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/white">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/item_flat_pic"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/default_flat"
        android:scaleType="centerCrop"
        android:layout_margin="5dp"/>

    <TextView
        android:id="@+id/item_flat_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:textSize="@dimen/title_size"
        android:textStyle="bold"
        android:text="Duplex"
        android:textColor="@color/black"
        android:layout_below="@+id/item_flat_pic"/>

    <TextView
        android:id="@+id/item_flat_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:textSize="@dimen/title_size_mini"
        android:textStyle="italic"
        android:text="Montpellier"
        android:textColor="@color/dark_grey"
        android:layout_below="@+id/item_flat_type"/>

    <TextView
        android:id="@+id/item_flat_price"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textSize="@dimen/title_size"
        android:text="500 000 â‚¬"
        android:textStyle="bold"
        android:layout_marginEnd="@dimen/default_margin"
        android:textColor="@color/pink"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/item_flat_location"/>

    <View
        android:layout_height="match_parent"
        android:layout_width="1dp"
        android:layout_gravity="right"
        android:background="@color/light_grey"
        android:layout_alignParentEnd="true"/>

</RelativeLayout>